<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/name_broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Corretora"
        android:textColor="@color/main_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/banner"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/main_theme"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/name_broker"
        app:layout_constraintTop_toBottomOf="@+id/name_broker" />

    <TextView
        android:id="@+id/name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=""
        android:textColor="@color/main_theme"
        app:layout_constraintStart_toEndOf="@+id/text_product"
        app:layout_constraintTop_toTopOf="@+id/text_product"
        app:layout_constraintBottom_toBottomOf="@id/text_product"/>

    <TextView
        android:id="@+id/text_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Nome do investimento"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/banner"
        app:layout_constraintTop_toTopOf="@+id/banner"  />

    <TextView
        android:id="@+id/category_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Categoria"
        android:textColor="@color/main_theme"
        app:layout_constraintStart_toStartOf="@+id/text_product"
        app:layout_constraintTop_toBottomOf="@+id/text_product" />

    <TextView
        android:id="@+id/text_profitability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="PARTE NA CARTEIRA"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_balance" />

    <TextView
        android:id="@+id/profitability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12,00%"
        android:textColor="@color/main_theme"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/balance_product"
        app:layout_constraintEnd_toEndOf="@+id/text_profitability"
        app:layout_constraintTop_toTopOf="@+id/balance_product" />

    <TextView
        android:id="@+id/text_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SALDO BRUTO"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/category_product"
        app:layout_constraintTop_toBottomOf="@+id/category_product" />

    <TextView
        android:id="@+id/balance_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="R$ 20,00"
        android:textColor="@color/main_theme"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_balance"
        app:layout_constraintTop_toBottomOf="@+id/text_balance" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_themes_news"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_theme"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_toolbar_themes_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Temas de notícia"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/themes_radio_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/cripto_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criptomoedas" />

        <RadioButton
            android:id="@+id/stocks_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mercado de Ações" />

        <RadioButton
            android:id="@+id/reits_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fundos imobiliarios" />

        <RadioButton
            android:id="@+id/welfare_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Previdência" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Escolha um tema para as noticias do seu app"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_themes_news" />
</androidx.constraintlayout.widget.ConstraintLayout>